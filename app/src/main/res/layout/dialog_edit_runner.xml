<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="tip.edu.ph.runrio.util.DateTimeUtils" />

        <variable
            name="view"
            type="tip.edu.ph.runrio.ui.runner.list.RunnerListView" />

        <variable
            name="user"
            type="tip.edu.ph.runrio.model.data.Profile" />
    </data>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?selectableItemBackground"
        app:cardElevation="1dp"
        app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:padding="10dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="Runner Information"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:textColor="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_edit_text_reg"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:text="@{user.profileEmail}"
                    android:maxLength="150"
                    android:padding="12dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_edit_text_reg"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:text="@{user.profileFirstName}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColorHint="@android:color/darker_gray" />

                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_edit_text_reg"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:text="@{user.profileLastName}"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColorHint="@android:color/darker_gray" />

                <!--<EditText-->
                    <!--android:id="@+id/et_email"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:background="@drawable/bg_edit_text_reg"-->
                    <!--android:hint="Email"-->
                    <!--android:inputType="textEmailAddress"-->
                    <!--android:padding="12dp"-->
                    <!--android:text="@{user.emailAddress}"-->
                    <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"-->
                    <!--android:textColorHint="@android:color/darker_gray" />-->
                <!-- Country -->
                <Spinner
                    android:id="@+id/sp_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_spinner"
                    android:fontFamily="sans-serif"
                    android:padding="12dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColorHint="@android:color/darker_gray" />

                <!-- Province -->
                <Spinner
                    android:id="@+id/sp_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_spinner"
                    android:fontFamily="sans-serif"
                    android:padding="12dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColorHint="@android:color/darker_gray" />

                <!-- City -->
                <Spinner
                    android:id="@+id/sp_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_spinner"
                    android:fontFamily="sans-serif"
                    android:padding="12dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColorHint="@android:color/darker_gray" />


                <Spinner
                    android:id="@+id/sp_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_spinner"
                    android:fontFamily="sans-serif"
                    android:padding="12dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                    android:textColorHint="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <!-- mobile number -->
                    <EditText
                        android:id="@+id/et_mobile_number"
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_edit_text_reg"
                        android:hint="Prefix(i.e.0917,02)"
                        android:inputType="number"
                        android:maxLength="5"
                        android:padding="12dp"
                        android:text="@{user.profileContactPrefix}"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColorHint="@android:color/darker_gray" />

                    <EditText
                        android:id="@+id/et_mobile_number2"
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_edit_text_reg"
                        android:hint="Number"
                        android:text="@{user.profileContactNo}"
                        android:inputType="number"
                        android:maxLength="7"
                        android:padding="12dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColorHint="@android:color/darker_gray" />

                </LinearLayout>


                <FrameLayout
                    android:id="@+id/layout_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_edit_text_reg"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{() -> view.onSelectBirthday()}"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/et_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:hint="Birthday"
                        android:text="@{DateTimeUtils.getShortBirthDateOnly(user.profileBday)}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColorHint="@android:color/darker_gray" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="end|center_vertical"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"
                         />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/button_rounded_slight_accent"
                    android:foreground="?attr/selectableItemBackground"
                    android:onClick="@{() -> view.onSaveAdd(user)}"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="48dp"
                    android:paddingRight="48dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="Save Changes"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold" />

            </LinearLayout>

    </android.support.v7.widget.CardView>


</ScrollView>

</layout>

